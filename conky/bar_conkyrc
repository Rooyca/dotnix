|| BAT: ${battery_percent}% || CPU: ${cpu cpu0}% ${acpitemp}c || MEM: $memperc% ($mem) || DL: ${if_up eth0}{downspeed eth0}${endif}${if_up wlo1}${downspeed wlo1}${endif} UP: ${if_up eth0}{upspeed eth0}${endif}${if_up wlo1}${upspeed wlo1}${endif} || ${time %a %b %d %I:%M%P} ||
]];
