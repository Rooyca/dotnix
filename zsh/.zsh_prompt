# Set the RPROMPT to the current time
# -----------------------------------
# Function to capture the time the command is executed
precmd() {
  current_time=$(date +%H:%M:%S)
}

RPROMPT='%F{cyan}${current_time}%{$reset_color%} '

add-zsh-hook precmd theme_precmd
